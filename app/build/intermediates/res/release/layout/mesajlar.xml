<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/layoutEditMesajArama"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-60dp">

        <EditText
            android:id="@+id/editMesajArama"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/search"
            android:hint="Arama"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listviewMesaj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#eee"
        android:layout_below="@id/layoutEditMesajArama"
        android:dividerHeight="1dp"/>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/imageButtonEkle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ekle"/>

        <TextView
            android:id="@+id/textEkleButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:fontFamily="sans-serif-light"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/layoutMesajYaz"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-251dp"
        android:background="@android:color/holo_blue_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Kime: "
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:id="@+id/editKime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"
                    android:inputType="phone"
                    android:phoneNumber="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Mesaj: "
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:id="@+id/editMesaj"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="100dp"
                    android:textSize="18sp"
                    android:gravity="top|left"
                    android:textColor="@android:color/white"
                    android:inputType="textMultiLine" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/textMesajYazUyari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:text="Lütfen Numara Giriniz!"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/buttonMesajGonder"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/black"
                    android:text="Gönder"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/holo_red_dark"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/Kaaninan/AndroidStudioProjects/Sifrele/app/src/main/res/layout/mesajlar.xml -->